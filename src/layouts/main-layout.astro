---
import Navbar from "../components/navbar.tsx";
import Footer from "../components/footer.tsx";

export interface LayoutProps {
  title: string;
}

const { title } = Astro.props as LayoutProps;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Tentacion" />

    <link
      rel="shortcut icon"
      href="public/favicon-beso.ico"
      type="image/x-icon"
    />
    <meta title={title} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Jost:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <main class="mb-10 lg:mb-20">
      <Navbar client:load />

      <slot />
    </main>
    <div
      class="tracking-tight text-base text-center bg-[#f6ebdd]/40 py-10 lg:text-[22px] lg:leading-[33px] font-jost text-text-gray border"
    >
      <Footer />
    </div>
  </body>
</html>

<style>
  body {
    background-image: linear-gradient(
      to top,
      #ff9a9e 0%,
      #fecfef 99%,
      #fecfef 100%
    ); /* background-image: linear-gradient(45deg, #ff9a9e 0%, #fad0c4 99%, #fad0c4 100%); */
  }
</style>
